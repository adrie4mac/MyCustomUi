<?xml version="1.0" encoding="utf-8"?>

   <!--  
    reference - references another resource id (e.g, "@color/my_color", "@layout/my_layout")
    color
    boolean
    dimension
    float
    integer
    string
    fraction
    enum - normally implicitly defined
    flag - normally implicitly defined 
    -->

<resources>
    <declare-styleable name="LoadingRotateImage">
       <attr name="showText" format="boolean" />
	   <attr name="text" format="string" />
       <attr name="textPosition" format="enum">
           <enum name="left" value="0"/>
           <enum name="right" value="1"/>
       </attr>
       <attr name="circleRad" format="integer" />
       <attr name="imgSrc" format="reference" />
       <attr name="spinSpeed" format="integer" />
       <attr name="delayMillis" format="integer" />
       <attr name="transparancy" format="integer" />
   </declare-styleable>
  
   <declare-styleable name="FlipImageView">
        <attr name="isAnimated" format="boolean" />
        <attr name="isFlipped" format="boolean" />
        <attr name="Drawable2" format="reference" />
        <attr name="flipDuration" format="integer" />
        <attr name="flipInterpolator" format="reference" />
        <attr name="flipRotations">
            <flag name="none" value="0" />
            <flag name="x" value="1" />
            <flag name="y" value="2" />
            <flag name="z" value="4" />
        </attr>
        <attr name="reverseRotation" format="boolean"></attr>
    </declare-styleable>
     
   <declare-styleable name="FlipNetworkImageView">
        <attr name="fnIsAutomaticRun" format="boolean" />
        <attr name="fnStartInterval" format="integer" />
        <attr name="fnEndInterval" format="integer" />
        <attr name="fnIsRandomAxis" format="boolean" />
        <attr name="fnIsAnimated" format="boolean" />
        <attr name="fnIsFlipped" format="boolean" />
        <attr name="fnFlipDuration" format="integer" />
        <attr name="fnFlipInterpolator" format="reference" />
        <attr name="fnFlipRotations">
            <flag name="none" value="0" />
            <flag name="x" value="1" />
            <flag name="y" value="2" />
            <flag name="z" value="4" />
        </attr>
        <attr name="fnReverseRotation" format="boolean"></attr>
    </declare-styleable>
    
	<declare-styleable name="BannerView">
	    <attr name="TitleLayoutPosition">
	        <flag name="Top" value="0" />
            <flag name="Bottom" value="1" />
	    </attr>    
	    <attr name="UsingBgOnTitleLayout" format="boolean" />
	    <attr name="TitleLayoutColour" format="reference" />
        <attr name="Title" format="string" />
        <attr name="TitleColor" format="reference" />
        <attr name="SubTitle" format="string" />
        <attr name="SubTitleColor" format="reference" />
        <attr name="BannerImage" format="reference" />
        <attr name="BannerSize" format="integer" />
        <attr name="Animation">
            <flag name="sliding" value="0" />
            <flag name="fade" value="1" />
            <flag name="slidefade" value="2" />
            <flag name="growshrink" value="3" />
            <flag name="fliphorizontal" value="4" />
            <flag name="flipvertical" value="5" />
            <flag name="growin_shrinkout" value="6" />
        </attr>
        <attr name="AutomaticRun" format="boolean"/>
        <attr name="ChangeInterval" format="integer" />
        <attr name="IsUsingIndicator" format="boolean" />
        <attr name="IndicatorBgColor" format="reference" />
		<attr name="IndicatorPosition">
		    <flag name="TopInside" value="0" />
            <flag name="BottomInside" value="1" />
            <flag name="BottomOff" value="2" />
		</attr>
		<attr name="IndicatorItemPosition">
		    <flag name="Left" value="0" />
            <flag name="Centre" value="1" />
            <flag name="Right" value="2" />
		</attr>
		<attr name="IsUsingNumberIndicator" format="boolean" />
		<attr name="IndicatorNumberNormalColor" format="reference" />
		<attr name="IndicatorNumberSelectedColor" format="reference" />
		<attr name="IndicatorImageNormal" format="reference" />
		<attr name="IndicatorImageSelected" format="reference" />
    </declare-styleable>
    
	<declare-styleable name="StaggeredGridView">
	    <attr name="NumColumns" format="integer" />
        <attr name="DrawSelectorOnTop" format="boolean" />
	</declare-styleable>
	
</resources>
